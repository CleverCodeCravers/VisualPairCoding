<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="330"
		SizeToContent="WidthAndHeight"
		Icon="/Assets/coworkers.ico"
        x:Class="VisualPairCoding.AvaloniaUI.AboutForm"
		
        Title="About">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
		<TextBlock Text="ℹ  Welcome to Visual Pair Coding!" FontSize="20"/>

		<TextBlock FontSize="16" Margin="0,10,0,5">
			This is a Clever Code Cravers project.
		</TextBlock>

		<TextBlock FontSize="16" Margin="0,10,0,5">
			<TextBlock Name="Url" Foreground="Blue" TextDecorations="Underline">
				https://github.com/CleverCodeCravers/VisualPairCoding
			</TextBlock>
		</TextBlock>

		<TextBlock FontSize="16" Margin="0,10,0,5">
			Version: <Run Text="{Binding Version}" Name="VPCVersion" Foreground="Green"/>
		</TextBlock>

		<TextBlock FontSize="16" Margin="0,10,0,5">
			May the force be with you!
		</TextBlock>

		<Separator Background="Transparent" Height="10"></Separator>
		
		<Button HorizontalAlignment="Right" Name="CloseButton">Close</Button>
	</StackPanel>
</Window>
