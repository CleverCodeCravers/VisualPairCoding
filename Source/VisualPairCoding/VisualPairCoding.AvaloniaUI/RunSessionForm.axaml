<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Width="400" Height="200"
        Icon="/Assets/coworkers.ico"
        x:Class="VisualPairCoding.AvaloniaUI.RunSessionForm"
        Title="Visual Pair Coding - Session Active"
        Background="{DynamicResource SurfaceBrush}"
        WindowStartupLocation="Manual"
        Topmost="True">
    
    <Border Classes="card" Margin="0" CornerRadius="0" Padding="24" BoxShadow="">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <!-- Driver and Navigator Info -->
                <StackPanel Grid.Column="0" Spacing="20">
                    <!-- Current Driver -->
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Width="10" Height="10" CornerRadius="5" 
                                    Background="{DynamicResource SuccessBrush}"
                                    VerticalAlignment="Center"/>
                            <TextBlock Classes="label" Text="CURRENT DRIVER" Margin="0"/>
                        </StackPanel>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" x:Name="activeParticipnat" 
                                       Text="Label Name 1" 
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Border Grid.Column="1" Background="{DynamicResource PrimaryBrush}" 
                                    CornerRadius="16" Padding="12,6">
                                <TextBlock x:Name="remainingTimeLabel" Text="5:00" 
                                           Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Next Navigator -->
                    <StackPanel Spacing="8">
                        <TextBlock Classes="label" Text="RECOMMENDED NAVIGATOR" Margin="0"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" x:Name="recommendedNavigator" 
                                       Text="Label Name 2" 
                                       FontSize="16"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="totalDurationRemaining" 
                                       Text="" 
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Spacing="8" Margin="20,0,0,0">
                    <Button x:Name="PauseButton" Classes="modern-primary" 
                            Click="PauseButton_Click" Width="90">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="⏸" FontSize="12"/>
                            <TextBlock Text="Pause"/>
                        </StackPanel>
                    </Button>
                    <Button Classes="modern-secondary" Click="SkipCurrentDriverButton_Click" Width="90">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="⏭" FontSize="12"/>
                            <TextBlock Text="Skip"/>
                        </StackPanel>
                    </Button>
                    <Button Click="CloseForm" Width="90">
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="⏹" FontSize="12"/>
                            <TextBlock Text="Stop"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="1" Height="4" Margin="-24,16,-24,-24" 
                         Background="{DynamicResource BorderBrush}"
                         Foreground="{DynamicResource PrimaryBrush}"
                         x:Name="sessionProgress" Value="25" Maximum="100"/>
        </Grid>
    </Border>
</Window>